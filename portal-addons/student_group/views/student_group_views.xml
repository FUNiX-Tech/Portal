<odoo>
  <record model="ir.ui.view" id="student_group_list">
    <field name="name">student_group.view.list</field>
    <field name="model">student_group</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name" />
        <field name="creator" />
        <field name="group_note" />
        <field name="created_at" />
        <field name="group_organization_id" />

      </tree>
    </field>
  </record>


  <record id="student_group_view_form" model="ir.ui.view">
    <field name="name">student_group.view.form</field>
    <field name="model">student_group</field>
    <field name="arch" type="xml">
      <form string="">
        <sheet>
          <group>
            <field name="name" />
            <field name="group_note" />
            <field name="created_at" />
            <field name="group_organization_id" />
            <field name="creator" attrs="{'invisible': [('group_organization_id', '=', False)]}"
              domain="[('student_organization_student_ids', '=', group_organization_id)]" />
          </group>
          <notebook>
            <page name="business_student" string="Students"
              attrs="{'invisible': [('group_organization_id', '=', False)]}">
              <field name="business_student_ids"
                domain="[('student_organization_student_ids', '=', group_organization_id)]" />
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>


  <record model="ir.actions.act_window" id="student_group.action_window">
    <field name="name">Student Group</field>
    <field name="res_model">student_group</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem name="Student Group" id="student_group_menu"
    parent="student_organization.student_organization_main" />
  <menuitem name="Student Group" id="student_group_sub_1" parent="student_group_menu"
    action="student_group.action_window" />

</odoo>
