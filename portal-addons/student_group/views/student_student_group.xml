<odoo>
    <data>
        <record id="view_student_form_inherit" model="ir.ui.view">
            <field name="name">portal.student.form.inherit.student_group</field>
            <field name="model">portal.student</field>
            <field name="inherit_id" ref="portal_student_management.student_form" />
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook" position="inside">
                    <page name="group" string="Groups"
                          attrs="{'invisible': ['|', ('student_organization_student_ids', '=', False), ('student_group_ids', '=', [])]}">
                        <field name="student_group_ids" />
                    </page>
                    <!-- <page name="group" string="Groups"
>
                        <field name="student_group_ids" />
                    </page> -->
                </xpath>
            </field>
        </record>
    </data>
</odoo>
