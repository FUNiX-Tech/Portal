<odoo>
    <record id="student_form" model="ir.ui.view">
        <field name="name">portal.student.form</field>
        <field name="model">portal.student</field>
        <field name="arch" type="xml">
            <!-- !TODO: Sáº½ Refactor UI -->
            <form>
                <sheet>
                        <h4 style="color:#66598f">General Information</h4>
                        <hr />
                        <group>
                            <group>
                                <field name="name" />
                                <field name="email" />
                                <field name="gender" />
                            </group>
                            <group>
                                <field name="username" />
                                <field name="phone" />
                                <field name="date_of_birth" />
                                <field name="lms_created_status" />
                                <field name="udemy_created_status" />
                                <!-- <button string="Reset Password" name="reset_password" type="object" class="oe_highlight wide-button" confirm="Are you sure you want to do this?"/> -->
                            </group>
                        </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="activity_ids" />
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                   </div>
            </form>
        </field>
    </record>
</odoo>
