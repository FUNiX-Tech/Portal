<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Email template for Response Ticket Notification -->
        <record id="response_ticket_email_template" model="mail.template">
            <field name="name">[PORTAL] Ticket Response Notification</field>
            <field name="model_id" ref="feedback-ticket-management.model_feedback_ticket"/>
            <field name="mail_server_id" ref="feedback-ticket-management.out_going_mailserver_data" />
            <field name="auto_delete">True</field>
            <field name="subject">Your Feedback Is Resolve! - {{object.ticket_number}}</field>
            <field name="email_from">portal.funix@funix.edu.vn</field>
            <field name="email_to">{{object.ticket_requester.email}}</field>
            <field name="description">The ticket has been resolved. Make a response to requester</field>
            <field name="body_html" type="html">
                <div style="width:100%">
                        <h4>Dear <t t-out="object.ticket_requester.name">,</t></h4>
                        <p>Your feedback has been acknowledged and resolved. Please see the response below and proceed again</p>
                        <p>Reponse: <t t-out="object.ticket_response"></t></p>
                        <p>Best regards,</p>
                        <p>Funix portal</p>
                </div>
            </field>
        </record>
    </data>
</odoo>
