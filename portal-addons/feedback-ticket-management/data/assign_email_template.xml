<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Email template for Assign Ticket Notification -->
        <record id="assign_ticket_email_template" model="mail.template">
            <field name="name">[PORTAL] Ticket Assignment Notification</field>
            <field name="model_id" ref="feedback-ticket-management.model_feedback_ticket"/>
            <field name="subject">You Are Assigned To New Ticket! - {{object.ticket_number}}</field>
            <field name="email_from">portal.funix@funix.edu.vn</field>
            <field name="email_to">{{object.ticket_assignee.email}}</field>
            <field name="description">There is new ticket which is assigned to you</field>
            <field name="body_html" type="html">
                <div style="width:100%">
                        <h2>Ticket Title: <t t-out="object.ticket_title"></t></h2>
                        <h4>Dear <t t-out="object.ticket_assignee.name">,</t></h4>
                        <p>There is new ticket which is assigned to you. Go to Portal and check it out for further details.</p>
                        <p>Best regards,</p>
                        <p>Funix portal</p>
                </div>
            </field>
        </record>
    </data>
</odoo>
