<odoo>
  <record model="ir.ui.view" id="organization_course_group_list">
    <field name="name">organization_course_group.view.list</field>
    <field name="model">organization_course_group</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name" />
        <field name="description" />
        <field name="creator_id" />
        <field name="organization_id" />
      </tree>
    </field>
  </record>


  <record id="organization_course_group_view_form" model="ir.ui.view">
    <field name="name">organization_course_group.view.form</field>
    <field name="model">organization_course_group</field>
    <field name="arch" type="xml">
      <form string="">
        <sheet>
          <group>
            <field name="name" />
            <field name="description" />
            <field name="organization_id" />
            <field name="creator_id" attrs="{'invisible': [('organization_id', '=', False)]}"/>
            <field name="course_ids" attrs="{'invisible': [('organization_id', '=', False)]}"/>
            </group>
        </sheet>
      </form>
    </field>
  </record>


  <record model="ir.actions.act_window" id="organization_course_group.action_window">
    <field name="name">Organization Course Group</field>
    <field name="res_model">organization_course_group</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem name="Course Group" id="course_group_menu"
    parent="student_organization.student_organization_main" action="organization_course_group.action_window" />

</odoo>
