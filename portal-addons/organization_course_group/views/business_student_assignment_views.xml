<odoo>

  <record model="ir.ui.view" id="business_student_course_assignment_list">
    <field name="name">student_course_assignment.view.list</field>
    <field name="model">business_student_course_assignment</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name" />
        <field name="organization_id" />
        <field name="business_student_id" />
        <field name="assigned_by" />
        <field name="course_id" />
        <field name="assigned_date" />
      </tree>
    </field>
  </record>


  <record id="business_student_course_assignment_view_form" model="ir.ui.view">
    <field name="name">business_student_course_assignment.view.form</field>
    <field name="model">business_student_course_assignment</field>
    <field name="arch" type="xml">
      <form string="">
        <sheet>
          <group>
            <field name="name" />
            <field name="organization_id" />

            <field name="business_student_id"
              attrs="{'invisible': [('organization_id', '=', False)]}" style="width: 100%" />
            <field name="assigned_by" attrs="{'invisible': [('organization_id', '=', False)]}"
              style="width: 100%" />
            <field name="course_id" attrs="{'invisible': [('organization_id', '=', False)]}"
              style="width: 100%" />
            <field name="assigned_date" attrs="{'invisible': [('organization_id', '=', False)]}"
              style="width: 100%" />
            <field name="assigned_description"
              attrs="{'invisible': [('organization_id', '=', False)]}" style="width: 100%" />
          </group>
        </sheet>
      </form>
    </field>
  </record>


  <record model="ir.actions.act_window" id="business_student_course_assignment_action_window">
    <field name="name">Business Student Course Assignment</field>
    <field name="res_model">business_student_course_assignment</field>
    <field name="view_mode">tree,form</field>
  </record>


  <record model="ir.ui.view" id="business_student_course_group_assignment_list">
    <field name="name">business_student_course_group_assignment.view.list</field>
    <field name="model">business_student_course_group_assignment</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name" />
        <field name="organization_id" />
        <field name="business_student_id" />
        <field name="assigned_by" />
        <field name="course_group_id" />
        <field name="assigned_date" />
      </tree>
    </field>
  </record>


  <record id="business_student_course_group_assignment_view_form" model="ir.ui.view">
    <field name="name">business_student_course_group_assignment.view.form</field>
    <field name="model">business_student_course_group_assignment</field>
    <field name="arch" type="xml">
      <form string="">
        <sheet>
          <group>
            <field name="name" />
            <field name="organization_id" />
            <field name="business_student_id"
              attrs="{'invisible': [('organization_id', '=', False)]}" />
            <field name="assigned_by" attrs="{'invisible': [('organization_id', '=', False)]}" />
            <field name="course_group_id" attrs="{'invisible': [('organization_id', '=', False)]}" />
            <field name="assigned_date" attrs="{'invisible': [('organization_id', '=', False)]}" />
            <field name="assigned_description"
              attrs="{'invisible': [('organization_id', '=', False)]}" />
          </group>
        </sheet>
      </form>
    </field>
  </record>


  <record model="ir.actions.act_window" id="business_student_course_group_assignment_action_window">
    <field name="name">Business Student Course Group Assignment</field>
    <field name="res_model">business_student_course_group_assignment</field>
    <field name="view_mode">tree,form</field>
  </record>


  <menuitem name="Student Assignment" id="business_student_assignment_menu"
    parent="student_organization.student_organization_main" />

  <menuitem name="Course Group Assignment" id="business_student_course_group_assignment_submenu"
    parent="business_student_assignment_menu"
    action="business_student_course_group_assignment_action_window" />

  <menuitem name="Single Course Assignment" id="business_student_single_course_assignment_submenu"
    parent="business_student_assignment_menu"
    action="business_student_course_assignment_action_window" />

</odoo>
