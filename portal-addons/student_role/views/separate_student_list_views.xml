<odoo>
      <!-- explicit list view definition -->

      <record model="ir.ui.view" id="individual_student_list_view">
        <field name="name">individual_student.view.list</field>
        <field name="model">portal.student</field>
        <field name="arch" type="xml">
          <tree>
            <field name="name"/>
            <field name="email"/>
            <field name="student_code"/>
            <field name="username"/>
          </tree>
        </field>
      </record>

      <record model="ir.actions.act_window" id="individual_student_view_action_window">
        <field name="name">Individual Student</field>
        <field name="res_model">portal.student</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="individual_student_list_view"/>
        <field name="domain">[('student_organization_student_ids','=',False)]</field>
      </record>



      <record model="ir.ui.view" id="business_student_list_view">
        <field name="name">business_student.view.list</field>
        <field name="model">portal.student</field>
        <field name="arch" type="xml">
          <tree>
            <field name="name"/>
            <field name="email"/>
            <field name="student_code"/>
            <field name="username"/>
            <field name="student_role_id" />
            <field name="temp_student_org" />
          </tree>
        </field>
      </record>

      <record model="ir.actions.act_window" id="business_student_view_action_window">
        <field name="name">Business Student</field>
        <field name="res_model">portal.student</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="business_student_list_view"/>
        <field name="domain">[('student_organization_student_ids','!=',False)]</field>
      </record>

      <menuitem name="Individual Student" id="individual_student_view_menu" parent="portal_student_management.student_mgmt_main_menu" action="individual_student_view_action_window"/>
      <menuitem name="Business Student" id="business_student_view_menu" parent="portal_student_management.student_mgmt_main_menu" action="business_student_view_action_window"/>

  </odoo>
