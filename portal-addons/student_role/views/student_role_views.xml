<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="student_role.list">
      <field name="name">student_role.view.list</field>
      <field name="model">student_role</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="description"/>
        </tree>
      </field>
    </record>

<record id="student_role_view_form" model="ir.ui.view">
  <field name="name">student_role.view.form</field>
  <field name="model">student_role</field>
  <field name="arch" type="xml">
    <form string="">
      <sheet>
        <group>
          <field name="name" />
          <field name="description" />
        </group>
      </sheet>
    </form>
  </field>
</record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="student_role.action_window">
      <field name="name">Student Role</field>
      <field name="res_model">student_role</field>
      <field name="view_mode">tree,form</field>
    </record>



    <!-- Top menu item -->

    <menuitem name="Student Role" id="student_role.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Student Role" id="student_role.menu_1" parent="student_role.menu_root" action="student_role.action_window"/>

  </data>
</odoo>
