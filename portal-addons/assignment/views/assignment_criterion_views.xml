<?xml version="1.0"?>
<odoo>
    <record id="assignment_criterion_view_form" model="ir.ui.view">
        <field name="name">assignment_criterion.form</field>
        <field name="model">assignment_criterion</field>
        <field name="arch" type="xml">
            <form string="Assignment Criterion">
                <sheet>
                   <group>
                        <group>
                            <field name="title" string="Criterion Name" class="border bg-light"/>
                            <field name="number" string="Number" class="border bg-light"/>
                            <field name="assignment" string="Assignment" class="border bg-light" invisible="1"/>
                        </group>
                        <notebook>
                            <page string="Specifications">
                                <field name="specifications" widget="html" string="Specifications"/>
                            </page>
                        </notebook>
                   </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="assignment_criterion_view_tree" model="ir.ui.view">
        <field name="name">assignment_criterion.tree</field>
        <field name="model">assignment_criterion</field>
        <field name="arch" type="xml">
            <tree string="Assignment Criterion" edit="false" class="text-center">
                <field name="number" />
                <field name="title" />
                <field name="specifications" />
            </tree>
        </field>
    </record>

    <record id="assignment_criterion_action" model="ir.actions.act_window">
        <field name="name">Assignment Criteria</field>
        <field name="res_model">assignment_criterion</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
