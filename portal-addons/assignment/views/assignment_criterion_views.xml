<?xml version="1.0"?>
<odoo>
    <record id="assignment_criterion_view_form" model="ir.ui.view">
        <field name="name">assignment_criterion.form</field>
        <field name="model">assignment_criterion</field>
        <field name="arch" type="xml">
            <form string="Assignment Criterion">
                <sheet>
                   <group>
                        <group>
                            <field name="name" string="Tên tiêu chí" class="border bg-light"/>
                            <field name="order" string="STT" class="border bg-light"/>
                            <field name="group" string="Nhóm tiêu chí" class="border bg-light"/>
                        </group>
                        <notebook>
                            <page string="Specifications">
                                <field name="specifications" widget="html" string="Đặc điểm kỹ thuật"/>
                            </page>
                        </notebook>
                   </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="assignment_criterion_view_tree" model="ir.ui.view">
        <field name="name">assignment_criterion.tree</field>
        <field name="model">assignment_criterion</field>
        <field name="arch" type="xml">
            <tree string="Assignment Criterion Group" edit="false" class="text-center">
                <field name="name" />
                <field name="order" />
                <field name="group" />
            </tree>
        </field>
    </record>

    <!-- Configuration/Lead & Opportunities/Lost Reasons Menu -->
    <record id="assignment_criterion_action" model="ir.actions.act_window">
        <field name="name">Assignment Criterions</field>
        <field name="res_model">assignment_criterion</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>