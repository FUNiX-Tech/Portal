<?xml version="1.0"?>
<odoo>
    <record id="grading_component_category_view_form" model="ir.ui.view">
        <field name="name">grading_component_category.form</field>
        <field name="model">grading_component_category</field>
        <field name="arch" type="xml">
            <form string="grading_component_category">
                <sheet>
                    <group>
                        <field name="code" string="Code" class="border bg-light"/>
                        <field name="name" string="Name" class="border bg-light"/>
                        <!-- <field name="components" string="Components" class="border bg-light"/> -->
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="grading_component_category_view_tree" model="ir.ui.view">
        <field name="name">grading_component_category.tree</field>
        <field name="model">grading_component_category</field>
        <field name="arch" type="xml">
            <tree limit="20" string="grading_component_category" edit="false" class="text-center">
                <field name="code" />
                <field name="name" />
                <!-- <field name="components" /> -->
            </tree>
        </field>
    </record>

    <record id="grading_component_category_action" model="ir.actions.act_window">
        <field name="name">Grading Component Category</field>
        <field name="res_model">grading_component_category</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
