<odoo>
    <data noupdate="1">

        <!-- Định nghĩa tăng Id cho assignment -->
        <record id="seq_mentor_assignment" model="ir.sequence">
            <field name="name">Assignment ID</field>
            <field name="code">assignment.assignment</field>
            <field name="prefix">A</field>
            <field name="padding">3</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Định nghĩa tăng Id cho Submission -->
        <record id="seq_mentor_submission" model="ir.sequence">
            <field name="name">Submission ID</field>
            <field name="code">assignment.assignment_submission</field>
            <field name="prefix">S</field>
            <field name="padding">3</field>
            <field name="company_id" eval="False"/>
        </record>

    </data>
</odoo>
