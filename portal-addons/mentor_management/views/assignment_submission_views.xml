<?xml version="1.0"?>
<odoo>

    <!-- Thêm trường mentor_id vào form -->
    <record id="assignment_submission_view_form" model="ir.ui.view">
        <field name="name">assignment_submission.form</field>
        <field name="model">assignment_submission</field>
        <field name="inherit_id" ref="assignment.assignment_submission_view_form" />
        <field name="arch" type="xml">

            <!-- Xử lý quyền cho nút submit -->
            <xpath expr="//header" position="inside">
                <field name="can_submit" invisible="1" />
            </xpath>
            <xpath expr="//header/button[@name='submit_grade'][1]" position="attributes">
                <attribute name="attrs">
                    {'invisible':[('can_submit','=',True),'&amp;',('has_graded_all_criteria','=',True),('result','=','not_graded')]}
                </attribute>
            </xpath>

            <xpath expr="//header/button[@name='submit_grade'][2]" position="attributes">
                <attribute name="attrs">
                    {'invisible':['|','|',('can_submit','=',False),('has_graded_all_criteria','=',False),('result','!=','not_graded')]}
                </attribute>
            </xpath>

            <!-- Thêm latest_submission_status vào sau assignmet -->
            <field name="assignment" position="after">
                <field name="latest_submission_status" />
            </field>



            <!-- Assign mentor ngay trong form Submission -->
            <field name="result" position="before">
                <field name="mentor_id" />
                <field name="mentor_user_id" invisible="1" />
            </field>

        </field>
    </record>

    <!-- Thêm các trường vào tree views -->
    <record id="assignment_submission_view_tree" model="ir.ui.view">
        <field name="name">assignment_submission.tree</field>
        <field name="model">assignment_submission</field>
        <field name="inherit_id" ref="assignment.assignment_submission_view_tree" />
        <field name="arch" type="xml">

            <!-- Thêm submission_id -->
            <field name="course" position="before">
                <field name="submission_id"/>
            </field>

            <!-- Thêm email student -->
            <field name="student" position="after">
                <field name="student_email"/>
            </field>

            <!-- thêm Status và Create time của Submission -->
            <field name="result" position="before">
                <field name="submission_date"/>
                <field name="latest_submission_status"/>
            </field>

            <!-- Thêm email mentor chấm bài -->
            <field name="result" position="before">
                <field name="mentor_id"/>
            </field>

        </field>
    </record>

</odoo>
