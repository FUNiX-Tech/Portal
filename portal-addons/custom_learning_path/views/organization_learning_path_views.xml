<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="organization_learning_path_list_view" model="ir.ui.view">
        <field name="name">organization_learning_path.list.view</field>
        <field name="model">organization_learning_path</field>
        <field name="arch" type="xml">
            <tree>
              <field name="name" />
              <field name="is_active" />
              <field name="description" />
              <field name="creator_id" />
              <field name="organization_id" />
            </tree>
        </field>
    </record>



    <record id="organization_learning_path_form_view" model="ir.ui.view">
      <field name="name">organization_learning_path.form.view</field>
      <field name="model">organization_learning_path</field>
      <field name="arch" type="xml">
          <form>
              <sheet>
                <group>
                    <field name="name" />
                    <field name="is_active" />
                    <field name="description" />
                    <field name="organization_id" />
                    <field name="creator_id" attrs="{'invisible': [('organization_id', '=', False)]}"/>
                </group>

                <notebook attrs="{'invisible': [('organization_id', '=', False)]}">
                    <page string="Courses">
                        <field name="course_ids" />
                    </page>
                    <page string="Editors">
                        <field name="editor_ids" />
                    </page>

                    <page string="Featured Editors">
                        <field name="featured_editor_ids" />

                    </page>
                </notebook>
              </sheet>
          </form>
      </field>
  </record>


    <record id="organization_learning_path_action" model="ir.actions.act_window">
        <field name="name">Organization learning path</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">organization_learning_path</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Learning Path" id="learning_path_main_menu" parent="student_organization.student_organization_main" />

    <menuitem name="Organization Learning Path" id="organization_learning_path" parent="learning_path_main_menu" action="organization_learning_path_action" />


</odoo>
