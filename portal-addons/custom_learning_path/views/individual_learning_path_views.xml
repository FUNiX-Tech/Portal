<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="individual_learning_path_list_view" model="ir.ui.view">
        <field name="name">individual_learning_path.list.view</field>
        <field name="model">individual_learning_path</field>
        <field name="arch" type="xml">
            <tree>
              <field name="name" />
              <field name="description" />
            </tree>
        </field>
    </record>



    <record id="individual_learning_path_form_view" model="ir.ui.view">
      <field name="name">individual_learning_path.form.view</field>
      <field name="model">individual_learning_path</field>
      <field name="arch" type="xml">
          <!-- !TODO: Sáº½ Refactor UI -->
          <form>
              <sheet>
                <group>
                    <field name="name" />
                    <field name="description" />
                    <field name="creator_id" />
                </group>
                <notebook attrs="{'invisible': [('creator_id','=',False)]}">
                    <page string="Info">
                        <field name="course_ids" />
                    </page>
                </notebook>
              </sheet>
          </form>
      </field>
  </record>


    <record id="individual_learning_path_action" model="ir.actions.act_window">
        <field name="name">individual learning path</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">individual_learning_path</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="individual Learning Path" id="individual_learning_path" parent="learning_path_main_menu" action="individual_learning_path_action" />


</odoo>
